<div class="modal fade" id="modalViewBooks" tabindex="-1" role="dialog" aria-labelledby="series" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLongTitle">serie: {{ serie.title }}</h3>
            </div>
            <div class="modal-body">
                <div>
                    {% for book in book_list[serie.id] %}

                        <h4 class=""><p>title: {{book.title}}</p></h4>
                        {% if book.number is not empty %}
                            <p>number: {{book.number}}</p>
                        {% endif %}
                        {% if book.special == true %}
                            <p>special(hs)</p>
                        {% endif %}
                        <p>summary: {{ book.summary }}</p>
                        <p>release date: {{ book.releaseDate|date("m/d/Y") }}</p>
                        <p class="">by {{ book.author }}</p>
                        <p>isbn: {{ book.isbn }}</p>

                    {% endfor %}
                </div>
            </div>
            <div class="modal-footer">
                empty
            </div>
        </div>

    </div>
</div>