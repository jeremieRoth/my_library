{% extends 'base.html.twig' %}

{% block title %}Series index{% endblock %}

{% block body %}
    <h1>Series index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>CreationDate</th>
                <th>UpdateDate</th>
                <th>Validate</th>
                <th>Finished</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for series in series %}
            <tr>
                <td>{{ series.id }}</td>
                <td>{{ series.title }}</td>
                <td>{{ series.creationDate ? series.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ series.updateDate ? series.updateDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ series.validate ? 'Yes' : 'No' }}</td>
                <td>{{ series.finished ? 'Yes' : 'No' }}</td>
                <td>{{ series.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('series_show', {'id': series.id}) }}">show</a>
                    <a href="{{ path('series_edit', {'id': series.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('series_new') }}">Create new</a>
{% endblock %}
